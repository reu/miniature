<script type="text/javascript">
jQuery(function($){

  (function transformSiteTitle () {
    var page_title = $("#site_title");
    var title_chars = $("#site_title").text().split('');
    $("#site_title").text("");
    var positions = [28,21,14,7,0,0,7,14,21,28];
    var deg = [-15, -10, -5, -2, 0, 0, 2, 5, 10, 15];

    for(var i = 0; i< title_chars.length; i++) {
      page_title.append("<span>" + title_chars[i] + "</span>");

      $("span", page_title).last().attr("style", "display: inline-block; -ms-transform: translate(0,"+positions[i]+"px) rotate("+deg[i]+"deg); -webkit-transform: translate(0,"+positions[i]+"px) rotate("+deg[i]+"deg); transform: translate(0"+positions[i]+"px) rotate("+deg[i]+"deg); text-shadow: 4px 4px 4px rgba(255,255,255,0.7)");
    }
  })()

});
</script>